<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_background"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Staff Management"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/color_text" />

        <TextView
            android:id="@+id/tv_staff_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 staff"
            android:textSize="14sp"
            android:textColor="@color/color_healthcare_primary"
            android:background="@drawable/count_badge_background"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp" />
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btn_add_staff"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Add Staff"
            android:textSize="12sp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/color_success" />

        <Button
            android:id="@+id/btn_refresh"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Refresh"
            android:textSize="12sp"
            android:backgroundTint="@color/color_healthcare_primary" />
    </LinearLayout>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_staff"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone" />

    <!-- No Data TextView - FIXED: Now it's a TextView, not LinearLayout -->
    <TextView
        android:id="@+id/tv_no_data"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="No staff members found"
        android:textSize="16sp"
        android:textColor="@color/color_text_secondary"
        android:gravity="center"
        android:visibility="visible" />

</LinearLayout>