<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_asha_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ASHA Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/color_text" />

            <TextView
                android:id="@+id/tv_asha_village"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Village"
                android:textSize="12sp"
                android:textColor="@color/color_text_secondary" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_asha_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: Not available"
            android:textSize="12sp"
            android:textColor="@color/color_text_secondary"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_patient_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0 patients"
                android:textSize="12sp"
                android:textColor="@color/color_healthcare_primary" />

            <TextView
                android:id="@+id/tv_high_risk_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0 high risk"
                android:textSize="12sp"
                android:textColor="@color/color_error" />  <!-- âœ… Fixed: was cut off -->
        </LinearLayout>

        <!-- View Details Button -->
        <Button
            android:id="@+id/btn_view_details"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="View Details"
            android:textSize="12sp"
            android:backgroundTint="@color/color_healthcare_primary"
            android:layout_marginTop="4dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>