<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_healthcare_primary"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Financial Management"
                android:textColor="@color/color_btn_primary_text"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_generate_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generate Report"

                android:textColor="@color/color_btn_primary_text"
                android:textSize="12sp"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Budget Overview Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Budget Overview"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/color_text"
                android:layout_marginBottom="16dp" />

            <!-- Budget Summary Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:background="@color/color_healthcare_primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@color/color_healthcare_primary">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Annual Budget"
                        android:textColor="@color/color_btn_primary_text"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_annual_budget"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₹1,50,00,000"
                        android:textColor="@color/color_btn_primary_text"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Progress Bar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ProgressBar
                            android:id="@+id/progress_budget_utilization"
                            android:layout_width="0dp"
                            android:layout_height="8dp"
                            android:layout_weight="1"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progress="57"
                            android:progressTint="@color/color_btn_primary_text"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/tv_utilization_percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="57% Utilized"
                            android:textColor="@color/color_btn_primary_text"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_utilized_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹85,00,000"
                                android:textColor="@color/color_btn_primary_text"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Utilized"
                                android:textColor="@color/color_btn_primary_text"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_remaining_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹65,00,000"
                                android:textColor="@color/color_btn_primary_text"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Remaining"
                                android:textColor="@color/color_btn_primary_text"
                                android:textSize="11sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Category Breakdown Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Budget Breakdown by Category"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/color_text"
                android:layout_marginBottom="16dp" />

            <!-- Categories RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_budget_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="16dp"  />

        </LinearLayout>

        <!-- Quick Actions Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quick Actions"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/color_text"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_manage_budget"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Manage Budget"
                    android:background="@drawable/primary_button_background"
                    android:textColor="@color/color_btn_primary_text" />

                <Button
                    android:id="@+id/btn_expense_tracker"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Expense Tracker"
                    android:background="@drawable/outline_button_background"
                    android:textColor="@color/color_healthcare_primary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/btn_budget_alerts"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Budget Alerts"
                    android:background="@drawable/outline_button_background"
                    android:textColor="@color/color_error" />

                <Button
                    android:id="@+id/btn_financial_audit"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Financial Audit"
                    android:background="@drawable/outline_button_background"
                    android:textColor="@color/color_text" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
