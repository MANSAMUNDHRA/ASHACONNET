<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate Reports"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#1A1A2E"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select a report type to generate and share"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp"/>

        <!-- Patient Report -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘© Patient Report"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A2E"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total patients, pregnancy status, high-risk summary and full patient list"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"/>
                <Button
                    android:id="@+id/btn_patient_report"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Generate &amp; Share"
                    android:backgroundTint="#4CAF50"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Staff Report -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘¥ Staff Report"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A2E"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="All registered staff â€” ASHA workers, doctors, nurses, and admins"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"/>
                <Button
                    android:id="@+id/btn_staff_report"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Generate &amp; Share"
                    android:backgroundTint="#2196F3"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Inventory Report -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’Š Inventory Report"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A2E"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Medicine stock levels, low stock alerts, and expiry information"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"/>
                <Button
                    android:id="@+id/btn_inventory_report"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Generate &amp; Share"
                    android:backgroundTint="#FF9800"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Financial Report -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’° Financial Report"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A2E"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Annual budget, utilization rate, and expense breakdown by category"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"/>
                <Button
                    android:id="@+id/btn_financial_report"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Generate &amp; Share"
                    android:backgroundTint="#9C27B0"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Full PHC Report -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#1A1A2E">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“‹ Full PHC Report"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Complete report combining patients, staff, inventory, and financials"
                    android:textSize="13sp"
                    android:textColor="#CCCCCC"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"/>
                <Button
                    android:id="@+id/btn_full_report"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Generate Full Report &amp; Share"
                    android:backgroundTint="#E91E63"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>