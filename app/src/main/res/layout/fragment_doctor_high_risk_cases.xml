<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_background"
    android:padding="16dp">

    <!-- Header with count -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="High Risk Cases"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/color_text" />

        <TextView
            android:id="@+id/tv_high_risk_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 cases"
            android:textSize="14sp"
            android:textColor="@color/color_error"
            android:background="@drawable/count_badge_background"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp" />
    </LinearLayout>

    <!-- Severity Filter Chips -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_severity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:singleSelection="true"
        app:selectionRequired="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:checked="true"
            style="@style/Widget.Material3.Chip.Filter" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_critical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Critical"
            app:chipBackgroundColor="@color/chip_red"
            style="@style/Widget.Material3.Chip.Filter" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_severe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Severe"
            app:chipBackgroundColor="@color/chip_orange"
            style="@style/Widget.Material3.Chip.Filter" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_moderate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moderate"
            app:chipBackgroundColor="@color/chip_yellow"
            style="@style/Widget.Material3.Chip.Filter" />
    </com.google.android.material.chip.ChipGroup>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btn_add_notes"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Add Notes"
            android:textSize="12sp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/color_healthcare_primary" />

        <Button
            android:id="@+id/btn_escalate"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Escalate"
            android:textSize="12sp"
            android:backgroundTint="@color/color_error" />
    </LinearLayout>

    <!-- RecyclerView for patients -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_high_risk"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone" />

    <!-- No Data View -->
    <LinearLayout
        android:id="@+id/tv_no_data"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_no_data"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No high-risk cases found"
            android:textSize="16sp"
            android:textColor="@color/color_text_secondary" />
    </LinearLayout>
</LinearLayout>