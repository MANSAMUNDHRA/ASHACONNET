<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_background"
    tools:context=".fragments.PatientListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_healthcare_primary"
        android:elevation="2dp"
        android:padding="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tv_patients_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/patients"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/color_text" />

            <Button
                android:id="@+id/btn_add_patient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_patient"
                android:background="@drawable/primary_button_background"
                android:textColor="@color/color_btn_primary_text"
                android:padding="12dp"
                android:drawableStart="@drawable/ic_add"
                android:drawablePadding="8dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:hint="@string/search_patients">

                <EditText
                    android:id="@+id/edit_patient_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:background="@drawable/edit_text_background"
                    android:padding="12dp"
                    android:drawableStart="@drawable/ic_search"
                    android:drawablePadding="8dp" />

            </com.google.android.material.textfield.TextInputLayout>


            <Spinner
                android:id="@+id/spinner_risk_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:padding="12dp"
                android:minWidth="120dp" />

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/filter_tabs_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_filter_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all"
                    android:background="@drawable/tab_button_background"
                    android:textColor="@color/white"
                    android:padding="8dp"
                    android:layout_margin="4dp"
                    android:minWidth="60dp"
                    android:state_selected="true" />

                <Button
                    android:id="@+id/btn_filter_pregnant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pregnant"
                    android:background="@drawable/tab_button_background"
                    android:textColor="@color/white"
                    android:padding="8dp"
                    android:layout_margin="4dp"
                    android:minWidth="80dp" />

                <Button
                    android:id="@+id/btn_filter_delivered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delivered"
                    android:background="@drawable/tab_button_background"
                    android:textColor="@color/white"
                    android:padding="8dp"
                    android:layout_margin="4dp"
                    android:minWidth="80dp" />

                <Button
                    android:id="@+id/btn_filter_high_risk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/high_risk"
                    android:background="@drawable/tab_button_background"
                    android:textColor="@color/white"
                    android:padding="8dp"
                    android:layout_margin="4dp"
                    android:minWidth="80dp" />

                <Button
                    android:id="@+id/btn_filter_referrals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/referrals"
                    android:background="@drawable/tab_button_background"
                    android:textColor="@color/white"
                    android:padding="8dp"
                    android:layout_margin="4dp"
                    android:minWidth="80dp" />

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_bg_1"
        android:padding="12dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_patient_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0 patients found"
            android:textSize="14sp"
            android:textColor="@color/color_text_secondary" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Sort Options -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sort by:"
                android:textSize="12sp"
                android:textColor="@color/color_text_secondary"
                android:layout_marginEnd="8dp" />

            <Spinner
                android:id="@+id/spinner_sort_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:padding="8dp"
                android:minWidth="100dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Main Content Area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Patient List RecyclerView -->

        <!-- Loading Indicator -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_patients"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:padding="8dp"
            android:scrollbars="vertical"
            tools:listitem="@layout/activity_item_patient_card" />

        <ProgressBar
            android:id="@+id/progress_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/layout_empty_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_patients_empty"
                android:alpha="0.5"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tv_empty_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_patients_found"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/color_text_secondary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_empty_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Try adjusting your filters or search terms"
                android:textSize="14sp"
                android:textColor="@color/color_text_secondary"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/btn_clear_filters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear Filters"
                android:background="@drawable/outline_button_background"
                android:textColor="@color/color_healthcare_primary"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Error State -->
        <LinearLayout
            android:id="@+id/layout_error_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_error"
                android:alpha="0.5"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/error_loading_patients"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/color_error"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please try again or contact support"
                android:textSize="14sp"
                android:textColor="@color/color_text_secondary"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/btn_retry_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retry"
                android:background="@drawable/primary_button_background"
                android:textColor="@color/color_btn_primary_text"
                android:padding="12dp" />

        </LinearLayout>

    </FrameLayout>

    <!-- Floating Action Button for Quick Add -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/color_healthcare_primary"
        app:tint="@color/color_btn_primary_text" />

</LinearLayout>
