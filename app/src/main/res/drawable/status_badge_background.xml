<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Success/Pregnant status -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_success_light" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="@color/color_success" />
        </shape>
    </item>
    
    <!-- Warning status -->
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_warning_light" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="@color/color_warning" />
        </shape>
    </item>
    
    <!-- Default status -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_success_light" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="@color/color_success" />
        </shape>
    </item>
</selector>