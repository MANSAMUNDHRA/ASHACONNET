<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item>
        <selector>
            <!-- Focused state -->
            <item android:state_focused="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/color_surface" />
                    <corners android:radius="8dp" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/color_healthcare_primary" />
                </shape>
            </item>
            
            <!-- Pressed state -->
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/color_secondary" />
                    <corners android:radius="8dp" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/color_healthcare_primary" />
                </shape>
            </item>
            
            <!-- Disabled state -->
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/color_secondary" />
                    <corners android:radius="8dp" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/color_border" />
                </shape>
            </item>
            
            <!-- Default state -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/color_surface" />
                    <corners android:radius="8dp" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/color_border" />
                </shape>
            </item>
        </selector>
    </item>
    
    <!-- Dropdown arrow icon -->
    <item
        android:gravity="end|center_vertical"
        android:drawable="@drawable/ic_arrow_drop_down"
        android:end="16dp" />
</layer-list>
