<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_surface" />
            <corners android:radius="8dp" />
            <stroke
                android:width="2dp"
                android:color="@color/color_healthcare_primary" />
            <padding
                android:top="8dp"
                android:bottom="8dp"
                android:left="12dp"
                android:right="12dp" />
        </shape>
    </item>

    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_secondary" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="@color/color_border" />
            <padding
                android:top="8dp"
                android:bottom="8dp"
                android:left="12dp"
                android:right="12dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_surface" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="@color/color_border" />
            <padding
                android:top="8dp"
                android:bottom="8dp"
                android:left="12dp"
                android:right="12dp" />
        </shape>
    </item>
</selector>
