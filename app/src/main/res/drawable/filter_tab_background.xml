<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_healthcare_primary" />
            <corners android:radius="18dp" />
            <stroke 
                android:width="1dp" 
                android:color="@color/color_healthcare_primary" />
        </shape>
    </item>
    
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_healthcare_primary_light" />
            <corners android:radius="18dp" />
            <stroke 
                android:width="1dp" 
                android:color="@color/color_healthcare_primary" />
        </shape>
    </item>
    
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_bg_1" />
            <corners android:radius="18dp" />
            <stroke 
                android:width="1dp" 
                android:color="@color/color_border" />
        </shape>
    </item>
    
</selector>
